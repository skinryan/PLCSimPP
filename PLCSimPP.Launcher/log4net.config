<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<!-- This section contains the log4net configuration settings -->
	<log4net>
		<logger name="ROWDATA">
			<level value="DEBUG" />
			<appender-ref ref="RowDataAppender" />
		</logger>
		<logger name="SYSTEM">
			<level value="ALL" />
			<appender-ref ref="ConsoleAppender" />
			<appender-ref ref="RollingFileAppender" />
		</logger>
		<logger name="COMMUNICATION">
			<level value="ALL" />
			<appender-ref ref="AdoNetAppender" />
		</logger>

		<appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
			<layout type="log4net.Layout.PatternLayout" value="%date [%thread] %-5level %logger - %message%newline" />
		</appender>
		<appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
			<file value="logfile/" />
			<appendToFile value="true" />
			<rollingStyle value="Composite" />
			<staticLogFileName value="false" />
			<datePattern value="yyyyMMdd'.log'" />
			<maxSizeRollBackups value="10" />
			<maximumFileSize value="1MB" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
			</layout>
		</appender>
		<appender name="RowDataAppender" type="log4net.Appender.RollingFileAppender">
			<file value="logfile/rawdata" />
			<appendToFile value="true" />
			<rollingStyle value="Composite" />
			<staticLogFileName value="false" />
			<datePattern value="yyyyMMdd'.log'" />
			<maxSizeRollBackups value="10" />
			<maximumFileSize value="1MB" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
			</layout>
		</appender>
		<appender name="AdoNetAppender" type="MicroKnights.Logging.AdoNetAppender, MicroKnights.Log4NetAdoNetAppender">
			<bufferSize value="1" />
			<connectionType value="System.Data.SQLite.SQLiteConnection,System.Data.SQLite" />
			<!--<connectionStringName value="log4net" />
			<connectionStringFile value="connectionstrings.json" />-->
			<connectionString value="data source=.\\DB\\PLCSimPP.db3;Version=3;" />
			<commandText value="INSERT INTO MsgLog (`Time`,`Direction`,`Address`,`Command`,`Details`,`Token`) VALUES (@Time,@Direction,@Address,@Command,@Details,@Token)" />
			<parameter>
				<parameterName value="@Time" />
				<dbType value="DateTime" />
				<layout type="log4net.Layout.RawTimeStampLayout" />
			</parameter>
			<parameter>                 
				<parameterName value="@Direction" />
				<dbType value="String" />
				<size value="4" />
				<layout type="log4net.Layout.PatternLayout">
					<conversionPattern value="%property{Direction}" />
				</layout>
			</parameter>
			<parameter>
				<parameterName value="@Address" />
				<dbType value="String" />
				<size value="20" />
				<layout type="log4net.Layout.PatternLayout">
					<conversionPattern value="%property{Address}" />
				</layout>
			</parameter>
			<parameter>
				<parameterName value="@Command" />
				<dbType value="String" />
				<size value="4" />
				<layout type="log4net.Layout.PatternLayout">
					<conversionPattern value="%property{Command}" />
				</layout>
			</parameter>
			<parameter>
				<parameterName value="@Details" />
				<dbType value="String" />
				<size value="100" />
				<layout type="log4net.Layout.PatternLayout">
					<conversionPattern value="%property{Details}" />
				</layout>
			</parameter>
			<parameter>
				<parameterName value="@Token" />
				<dbType value="String" />
				<size value="50" />
				<layout type="log4net.Layout.PatternLayout">
					<conversionPattern value="%property{Token}" />
				</layout>
			</parameter>
		</appender>

		<!-- Setup the root category, add the appenders and set the default level -->
		<!--<root>
			<level value="ALL" />
			<appender-ref ref="ConsoleAppender" />
			<appender-ref ref="FileAppender" />
			<appender-ref ref="RollingLogFileAppender" />
		</root>-->

	</log4net>
</configuration>